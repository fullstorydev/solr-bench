{
  "task-types": {
    "indexing": {
      "index-benchmark": {
        "name": "ECOMMERCE_EVENTS",
        "description": "E-Commerce Events dataset",
        "replication-type": "cloud",
        "dataset-file": "ecommerce-events.json.gz",
        "file-format": "json",
        "max-docs": 1000,
        "batch-size": 1000,
        "id-field": "id",
        "setups": [
          {
            "setup-name": "cloud_3x1",
            "collection": "ecommerce-events-${INDEX}",
            "configset": "conf_ecommerce_events",
            "share-configset": true,
            "replication-factor": 1,
            "shards": 4,
            "min-threads": 2,
            "max-threads": 2,
            "thread-step": 1
          }
        ]
      }
    },
    "querying": {
      "query-benchmark": {
        "name": "Facet queries",
        "collection": "ecommerce-events-${INDEX}",
        "query-file": "facets.json",
        "min-threads": 1,
        "max-threads": 1,
        "json-query": true,
        "shuffle": false,
        "rpm": 3000,
        "total-count": 20,
        "warm-count": 10,
	      "query-node": 2
      }
    },
    "restart-solr-node": {
      "restart-solr-node": "${NODE_INDEX}",
      "await-recoveries": true
    }
  },
  "global-variables": {
    "collection-counter": 0,
    "query-counter": 0,
    "query-counter2": 0,
    "restart-counter": 0
  },
  "global-constants": {
    "HOST": "localhost",
    "PORT": "8983"
  },
  "execution-plan": {
    "task1": {
      "type": "indexing",
      "instances": 500,
      "concurrency": 20,
      "mode": "sync",
      "parameters": {
        "INDEX": "${collection-counter}",
        "SHARDS": 1
      },
      "pre-task-evals": [
          "inc(collection-counter,1)"
      ]
    },
    "task2": {
      "description": "Restart Solr node",
      "instances": 10,
      "concurrency": 10,
      "type": "restart-solr-node",
      "parameters": {
        "NODE_INDEX": "${restart-counter}"
      },
      "wait-for": "task1",
      "mode": "sync",
      "pre-task-evals": [
        "inc(restart-counter,1)"
      ]
    },
    "task3": {
      "type": "querying",
      "instances": 500,
      "concurrency": 16,
      "wait-for": "task2",
      "mode": "sync",
      "parameters": {
        "INDEX": "${query-counter}"
      },
      "pre-task-evals": [
          "inc(query-counter,1)"
      ]
    },
    "task4": {
      "type": "querying",
      "instances": 500,
      "concurrency": 16,
      "wait-for": "task3",
      "mode": "sync",
      "parameters": {
        "INDEX": "${query-counter2}"
      },
      "pre-task-evals": [
          "inc(query-counter2,1)"
      ]
    }

  },
  "cluster": {
    "num-solr-nodes": 12,
    "startup-params": "-m 6g -V",
    "startup-params-overrides": ["-m 6g -V -Doverseer.node=true", "-m 12g -V -Dquery.node=true"],
    "provisioning-method": "local"
  },
    "repository": {
	          "commit-id": "09588427692f44f069ca5fd48d21812745c0cb33",
		        "description": "Solr 8.8",
		              "name": "fs-repository",
		              "package-subdir": "/solr/package/",
		        "build-command": "ant ivy-bootstrap && cd solr && ant compile package",
	          "submodules": false,
          "url": "https://github.com/fullstorydev/lucene-solr",
        "user": "ishan"
    },
  "pre-download": ["https://home.apache.org/~ishan/ecommerce-events.json.gz"],
  "metrics": [
    "jvm/solr.jvm/memory.heap.usage", "jvm/solr.jvm/threads.count"
  ],
  "zk-metrics": [
    "sum_collections_read_per_namespace", "sum_collections_write_per_namespace"
  ]
}
